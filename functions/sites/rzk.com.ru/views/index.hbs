<div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-2">
  {{#each objects as |object|}}
    <div class="col">
      <div class="card text-center h-100">
        <a href="/o/{{object.id}}">
          <img src="{{object.img1}}" class="card-img-top" onerror="this.src = '/icons/photo_error.svg';" alt="{{object.name}}">
        </a>
        <div class="card-body">
          <h5>
            <a href="/o/{{object.id}}">{{object.name}}</a>
            <a href="{{object.img2}}" class="js-smartphoto-single text-decoration-none" data-caption="{{object.name}}">
              <img src="/icons/zoom-in.svg" width="24" height="24" class="m-2" alt="zoom img">
            </a>
            <a href="//t.me/{{../envSite.botName}}?start=o_{{object.id}}_c_c" target="_blank" class="ms-2">
              <i class="bi bi-telegram fs-3"></i>
            </a>
          </h5>
          <p class="card-text">
            {{object.description}}
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            {{object.address}}
          </li>
          <li class="list-group-item">
            {{#each object.phoneArray as |phone|}}
              <a href="tel:{{phone}}" class="text-decoration-none">{{phone}}</a>
            {{/each}}
          </li>
          <li class="list-group-item">
            <div class="d-grid gap-2">
              <a href="/o/{{object.id}}/c"  class="btn btn-primary"><i class="bi bi-folder2"></i> Каталог</a>
            </div>
          </li>
        </ul>
        <div class="card-footer">
          <div class="d-grid gap-2">
            <a href="/o/{{object.id}}/cart"  class=" btn btn-primary position-relative mt-2">
              <span class="text-nowrap"><i class="bi bi-cart3"></i> {{object.cartInfo.totalSum}} {{../envSite.currency}}</span>
              <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                {{object.cartInfo.cartCount}}
                <span class="visually-hidden">count goods</span>
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
