<div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-2">
  {{#each objects as |object|}}
    <div class="col">
      <div class="card text-center h-100">
        <a href="/o/{{object.id}}">
          <img src="{{object.img1}}" class="card-img-top" onerror="this.src = '/icons/photo_error_{{../envSite.lang}}.svg';" alt="{{object.name}}">
        </a>
        <div class="card-body">
          <h5>
            <a href="/o/{{object.id}}">{{object.name}}</a>
            <div class="mt-2">
              <a href="{{object.img2}}" class="js-smartphoto-single text-decoration-none" title="zoom" data-caption="{{object.name}}">
                <img src="/icons/zoom-in.svg" width="28" height="28" class="me-2" alt="zoom img">
              </a>
              <a href="//t.me/{{../envSite.botName}}?start=o_{{object.id}}_c_c" target="_blank">
                <i class="bi bi-telegram fs-4"></i>
              </a>
            </div>
          </h5>
          <p class="card-text">
            {{object.description}}
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            {{object.address}}
          </li>
          <li class="list-group-item">
            {{#each object.phoneArray as |phone|}}
              <a href="tel:{{phone}}" class="text-decoration-none">{{phone}}</a>
            {{/each}}
          </li>
          <li class="list-group-item">
            <div class="d-grid gap-2">
              <a href="/o/{{object.id}}/c"  class="btn btn-primary"><i class="bi bi-folder2"></i> Каталог</a>
            </div>
          </li>
        </ul>
        <div class="card-footer">
          <div class="d-grid gap-2">
            <a href="/o/{{object.id}}/cart"  class=" btn btn-primary position-relative mt-2">
              <span class="text-nowrap"><i class="bi bi-cart3"></i> {{object.cartInfo.totalSum}} {{../envSite.currency}}</span>
              <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                {{object.cartInfo.cartCount}}
                <span class="visually-hidden">count goods</span>
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
<div class="row mt-3">
  {{#each envSite.i18n.siteSeoText as |text|}}
    <h2>{{@key}}</h2>
    <p class="lead">
      {{text}}
    </p>
  {{/each}}
</div>
<div class="accordion mt-3" id="accordionExample">
  {{#each envSite.i18n.siteSeoQuestion as |answer|}}
    <div class="accordion-item" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{@index}}" aria-expanded="true" aria-controls="collapse{{@index}}">
          <div itemprop="name">{{@key}}</div>
        </button>
      </h2>
      <div itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer" id="collapse{{@index}}" class="accordion-collapse collapse {{#unless @index}}show{{/unless}}" aria-labelledby="headingOne">
        <div itemprop="text" class="accordion-body">
          {{answer}}
        </div>
      </div>
    </div>
  {{/each}}
</div>
{{#if envSite.postId}}
<div class="row row-cols-1 row-cols-md-1 row-cols-lg-2 mt-3">
  <div class="col">
    <div class="card p-2">
      <script async src="https://telegram.org/js/telegram-widget.js?21" data-telegram-post="{{envSite.channel}}/{{envSite.postId}}" data-width="100%"></script>
      <script async src="https://telegram.org/js/telegram-widget.js?21" data-telegram-discussion="{{envSite.channel}}/{{envSite.postId}}" data-comments-limit="5"></script>
    </div>
  </div>
</div>
{{/if}}