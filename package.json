{
  "name": "rzk-market-ua",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint": "yarn lint:js",
    "deploy-site-ua":"firebase deploy --project=ua --only functions:site,hosting:rzk.com.ua",
    "deploy-bot-ua":"firebase deploy --project=ua --only functions:bot",
    "deploy-triggers-ua":"firebase deploy --project=ua --only functions:triggers,functions:productsUpload",
    "deploy-site-ru":"firebase deploy --project=ru --only functions:site,hosting:rzk.com.ru",
    "deploy-bot-ru":"firebase deploy --project=ru --only functions:bot",
    "deploy-triggers-ru":"firebase deploy --project=ru --only functions:triggers,functions:productsUpload",
    "deploy-site-dev":"firebase deploy --project=dev -only functions:site,hosting:dev.rzk.com.ua",
    "deploy-triggers-dev":"firebase deploy --project=dev --only functions:triggers,functions:productsUpload",
    "deploy-bot-dev":"firebase deploy --project=dev --only functions:bot",
    "pl": "firebase use",
    "s-h": "firebase --project=dev emulators:start --only hosting:dev.rzk.com.ru",
    "s-f": "firebase --project=dev emulators:start --only functions",
    "s-ff": "firebase --project=dev emulators:start --only functions,firestore",
    "s-fh": "firebase --project=dev emulators:start --only functions,hosting:dev.rzk.com.ru",
    "s-ffh": "firebase --project=dev emulators:start --only functions,firestore,hosting:dev.rzk.com.ru",
    "sitemap-ua": "node functions/sites/rzk.com.ru/sitemap.js ua",
    "sitemap-ru": "node functions/sites/rzk.com.ru/sitemap.js ru",
    "kill-port": "fuser -k 5001/tcp"
  },
  "dependencies": {},
  "devDependencies": {}
}
