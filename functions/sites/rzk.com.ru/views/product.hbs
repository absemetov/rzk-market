<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="/">{{envSite.i18n.aObjects}}</a>
    </li>
    <li class="breadcrumb-item">
      <a href="/o/{{object.id}}">{{object.name}}</a>
    </li>
    <li class="breadcrumb-item">
      <a href="/o/{{object.id}}/c">{{envSite.i18n.aCatGoods}}</a>
    </li>
    {{#each product.pathArray as |item|}}
      <li class="breadcrumb-item">
        <a href="/o/{{../object.id}}/c/{{item.url}}">{{item.name}}</a>
      </li>
    {{/each}}
  </ol>
</nav>
<h1>{{#if product.brand}}{{product.brand}} / {{/if}}{{product.name}}</h1>
<div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-2 pb-3">
  {{> product product=product object=object envSite=envSite smartPhoto=true}}
</div>
{{#if product.tagsNames}}
  <h3>Tags</h3>
  <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5 g-2 mb-3">
    {{#each product.tagsNames as |tag|}}
      <div class="col">
        <div class="card text-center h-100">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><a href="/o/{{../object.id}}/c/{{../product.tagPath}}?tag={{url tag}}">{{tag}}</a></li>
          </ul>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}
{{#if photos}}
  <h3>Фото</h3>
  <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5 g-2 mb-3">
    {{#each photos as |photo|}}
      <div class="col">
        <div class="card text-center h-100">
          <a href="{{photoError photo.img2 ../envSite.lang}}" class="js-smartphoto" data-caption="{{../product.name}}">
            <img src="{{photoError photo.img1 ../envSite.lang}}" onerror="this.src = '/icons/photo_error_{{../envSite.lang}}.svg';" class="card-img-top" alt="{{../product.name}}">
          </a>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}
{{#if product.postId}}
<div class="row row-cols-1 row-cols-md-1 row-cols-lg-2 mt-3">
  <div class="col">
    <div class="card p-2">
      <script async src="https://telegram.org/js/telegram-widget.js?21" data-telegram-post="{{envSite.channel}}/{{product.postId}}" data-width="100%"></script>
      <script async src="https://telegram.org/js/telegram-widget.js?21" data-telegram-discussion="{{envSite.channel}}/{{product.postId}}" data-comments-limit="5"></script>
    </div>
  </div>
</div>
{{/if}}