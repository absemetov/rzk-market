{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "parcel-s": "parcel --target web --cache-dir ../.parcel-cache --dist-dir ../dist",
    "parcel-b": "rm -rf ../sites/rzk.com.ru/assets && parcel build --target web --cache-dir ../.parcel-cache --no-cache --no-source-maps && rm ../sites/rzk.com.ru/assets/index.html",
    "parcel-m": "parcel build --target bundler",
    "lint": "eslint .",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "index.js",
  "targets": {
    "main": false,
    "web": {
      "context": "browser",
      "source": "sites/rzk.com.ru/src/index.html",
      "distDir": "../sites/rzk.com.ru/assets"
    },
    "bundler": {
      "context": "node",
      "source": "index.js",
      "distDir": "bundler",
      "outputFormat": "esmodule",
      "sourceMap": false
    }
  },
  "dependencies": {
    "@algolia/autocomplete-js": "^1.7.0",
    "@algolia/autocomplete-plugin-query-suggestions": "^1.7.0",
    "@algolia/autocomplete-plugin-recent-searches": "^1.7.0",
    "@algolia/autocomplete-theme-classic": "^1.7.0",
    "@googleapis/content": "^7.1.0",
    "@popperjs/core": "^2.11.5",
    "algoliasearch": "^4.14.2",
    "axios": "^0.24.0",
    "bootstrap": "^5.2.0",
    "bootstrap-icons": "^1.8.2",
    "busboy": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "currency-codes": "^2.1.0",
    "cyrillic-to-translit-js": "^3.2.1",
    "express": "^4.18.1",
    "express-handlebars": "^6.0.6",
    "firebase-admin": "^11.0.1",
    "firebase-functions": "^4.1.0",
    "google-spreadsheet": "^3.3.0",
    "googleapis": "^105.0.0",
    "instantsearch.js": "^4.49.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "smartphoto": "^1.6.4",
    "telegraf": "^4.10.0",
    "telegraf-i18n": "^6.6.0",
    "validatorjs": "^3.22.1"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "2.6.2",
    "algolia-sitemap": "^2.2.0",
    "eslint": "^8.14.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^0.2.0",
    "parcel": "^2.6.2"
  },
  "private": true
}
