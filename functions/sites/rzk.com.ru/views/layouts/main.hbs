<!doctype html>
  <html lang="{{envSite.lang}}">
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" href="/dist/index.93cf057c.css">
      <script type="module" src="/dist/index.88017ed6.js"></script>
      <title>{{#if title}}{{title}} - {{/if}}{{envSite.i18n.siteTitle}}</title>
      <link rel="icon" href="/favicon.ico">
      <link rel="icon" href="/logo/logo.svg" type="image/svg+xml">
      <meta name="description" content="{{#if description}}{{description}}{{else}}{{envSite.i18n.siteDesc}}{{/if}}">
      <meta name="keywords" content="{{keywords}}, {{envSite.i18n.siteKeywords}}">
      <meta name="robots" content="index,follow">
      <meta name="author" content="Nadir Absemetov - absemetov.org.ua">
      <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id={{envSite.gtag}}"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag("js", new Date());
        gtag("config", "{{envSite.gtag}}");
      </script>
    </head>
    <body>
      <nav class="navbar navbar-expand navbar-light bg-light">
        <div class="container">
          <button class="navbar-toggler d-inline" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <a class="d-none d-md-inline px-2" href="/">
            <img src="/logo/logo-long-{{envSite.lang}}.svg" alt="{{envSite.i18n.siteName}}" width="" height="40">
          </a>
          <a class="d-inline d-md-none px-2" href="/">
            <img src="/logo/logo.svg" alt="{{envSite.i18n.siteName}}" width="" height="40">
          </a>
          <div id="autocomplete" class="w-100"></div>
          {{#if object.id}}
            <ul class="navbar-nav me-2">
              <li class="nav-item"></li>
                <a class="text-nowrap nav-link{{#if cart}} active{{/if}} position-relative" href="/o/{{object.id}}/cart">
                  <i class="bi bi-cart3"></i> <strong id="totalSumNav">{{object.cartInfo.totalSum}} {{envSite.currency}}</strong>
                  <span id="cartCountNav" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger mt-1">
                    {{object.cartInfo.cartCount}}
                    <span class="visually-hidden">count goods</span>
                  </span>
                </a>
              </li>
            </ul>
          {{/if}}
        </div>
      </nav>
      <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasNavbarLabel">{{envSite.i18n.siteName}}</h5>
          <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <p class="lead">{{envSite.i18n.desc}}</p>
          <nav class="nav flex-column">
            {{#if envSite.user.auth}}
              <a class="nav-link" href="/login">{{envSite.user.firstName}}</a>
            {{else}}
              <a class="nav-link" href="/login">{{envSite.i18n.aLogin}}</a>
            {{/if}}
            <a class="nav-link" href="/delivery-info">{{envSite.i18n.aDelivery}}</a>
            <a class="nav-link" href="/return-policy">{{envSite.i18n.aReturn}}</a>
            <a class="nav-link" href="//maps.app.goo.gl/F46h38LnK3Dq3jC7A">{{envSite.i18n.aReview}}</a>
            <a class="nav-link" href="tel:{{envSite.siteTel}}">{{envSite.siteTel}}</a>
            <a class="nav-link" href="//t.me/{{envSite.botName}}?start=fromsite">
              <i class="bi bi-telegram"></i>
              @{{envSite.botName}}
            </a>
            <a class="nav-link" href="//absemetov.org.ua/">Nadir Absemetov</a>
            <a class="nav-link disabled" href="https://github.com/absemetov/rzk-com-ua">RZK Market v.2.0.0 © 2022</a>
            </nav>
        </div>
      </div>
      <div class="container d-none pt-2" id="search">
        <div class="d-grid gap-2">
          <button class="btn btn-primary d-block d-lg-none mb-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasResponsive" aria-controls="offcanvasResponsive">Фильтр</button>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <div class="offcanvas-lg offcanvas-start" tabindex="-1" id="offcanvasResponsive" aria-labelledby="offcanvasResponsiveLabel">
              <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasResponsiveLabel">Фильтр</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasResponsive" aria-label="Close"></button>
              </div>
              <div class="offcanvas-body flex-column">
                <div class="accordion accordion-flush" id="accordionPanelsStayOpenExample">
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                        Каталог
                      </button>
                    </h2>
                    <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                      <div class="accordion-body p-0">
                        <div id="hierarchical-menu" class="list-group list-group-flush py-2"></div>
                      </div>
                    </div>
                  </div>
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-heading3">
                      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapse3" aria-expanded="true" aria-controls="panelsStayOpen-collapse3">
                        Категория
                      </button>
                    </h2>
                    <div id="panelsStayOpen-collapse3" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-heading3">
                      <div class="accordion-body p-0">
                        <div id="refinement-list-subcategory" class="list-group py-2"></div>
                      </div>
                    </div>
                  </div>
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="true" aria-controls="panelsStayOpen-collapseTwo">
                        Бренд
                      </button>
                    </h2>
                    <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingTwo">
                      <div class="accordion-body p-0">
                        <div id="refinement-list-brand" class="py-2"></div>
                      </div>
                    </div>
                  </div>
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-heading4">
                      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapse4" aria-expanded="true" aria-controls="panelsStayOpen-collapse4">
                        Продавец
                      </button>
                    </h2>
                    <div id="panelsStayOpen-collapse4" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-heading4">
                      <div class="accordion-body p-0">
                        <div id="refinement-list-seller" class="list-group py-2"></div>
                      </div>
                    </div>
                  </div>
                </div>
                <div id="powered-by" class="pt-2"></div>
              </div>
            </div>
          </div>
          <div class="col-md-12 col-lg-9">
            <div class="row">
              <nav id="breadcrumb" aria-label="breadcrumb"></nav>
            </div>
            <ul id="current-refinements" class="nav"></ul>
            <div id="loading-indicator">
            <div class="d-flex justify-content-center">
                <div class="spinner-border" role="status">
                  <span class="visually-hidden">Loading...</span>
                </div>
              </div>
            </div>
            <div id="hits" class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-2"></div>
            <div class="row pt-4">
              <nav id="pagination" aria-label="Page navigation example"></nav>
            </div>
          </div>
        </div>
      </div>
      <div class="container pt-2"  id="main">
        {{{body}}}
      </div>
      <!-- Modal show product -->
      <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="productModalLabel">{{envSite.i18n.modalShowTitle}}</h5>
              <button id="fullscreen" type="button" class="btn btn-outline-secondary ms-2"><i class="bi bi-arrows-fullscreen"></i></button>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            </div>
          </div>
        </div>
      </div>
      <!-- Modal cart -->
      <div class="modal fade" id="cartAddModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addToCartForm">
              <div class="modal-body">
                <div class="input-group mb-3">
                  <input type="number" min="0" id="qty" name="qty" class="form-control" placeholder="{{envSite.i18n.placeholderQty}}" aria-label="{{envSite.i18n.placeholderQty}}" aria-describedby="basic-addon2">
                  <span class="input-group-text" id="basic-addon2"></span>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" id="deleteFromCart" class="btn btn-danger">{{envSite.i18n.btnDel}}</button>
                <button type="submit" id="addToCart" class="btn btn-primary" data-currency="{{envSite.currency}}" data-lang="{{envSite.lang}}">{{envSite.i18n.btnBuy}}</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- Modal purchase -->
      <div class="modal fade" id="purchaseModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Оформить заказ</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form id="purchase" action="/o/{{object.id}}/cart/purchase">
                {{#unless user.auth}}
                  <div id="infoAlert" class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>У вас есть Telegram?</strong> <a href="/login?r={{object.id}}">Войдите через Telegram</a>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                {{/unless}}
                <div id="successAlert" class="alert alert-success d-none" role="alert">
                  <h4 class="alert-heading">Ваш заказ оформлен</h4>
                  <p><a id="linkOrder" href="#">Ccылка на ваш заказ</a> для просмотра статуса заказа</p>
                  <hr>
                  <p class="mb-0">В ближайшее время мы с Вами свяжемся</p>
                </div>
                <div class="mb-3">
                  <label for="lastName" class="form-label">Фамилия получателя</label>
                  <input type="text" class="form-control" name="lastName" id="lastName" aria-describedby="lastName" required autofocus>
                </div>
                <div class="mb-3">
                  <label for="firstName" class="form-label">Имя получателя</label>
                  <input type="text" class="form-control" name="firstName" id="firstName" aria-describedby="firstName" required>
                </div>
                <div class="mb-3">
                  <label for="phoneNumber" class="form-label">Моб. номер телефона</label>
                  <input type="tel" pattern="{{phoneregexp}}" title="{{phonetemplate}}" class="form-control" name="phoneNumber" id="phoneNumber" aria-describedby="phoneNumber" required>
                </div>
                <div class="mb-3">
                  <label for="address" class="form-label">Адрес</label>
                  <input type="text" class="form-control" name="address" id="address" aria-describedby="address" required>
                </div>
                <div class="mb-3">
                  <label for="carrierId" class="form-label">Способ доставки</label>
                  <select name="carrierId" id="carrierId" class="form-select" aria-label="carrierId">
                    {{#each carriers as |carrier|}}
                      <option value="{{carrier.id}}" data-bs-reqnumber="{{carrier.reqNumber}}">{{carrier.name}}</option>
                    {{/each}}
                  </select>
                </div>
                <div class="mb-3" id="carrierNumberDiv">
                  <label for="carrierNumber" class="form-label">Номер отделения</label>
                  <input type="number" min="1" class="form-control" name="carrierNumber" id="carrierNumber" aria-describedby="carrierNumberFeedback">
                  <div id="carrierNumberFeedback" class="invalid-feedback"></div>
                </div>
                <div class="mb-3">
                  <label for="paymentId" class="form-label">Способ оплаты</label>
                  <select name="paymentId" id="paymentId" class="form-select" aria-label="paymentId">
                    {{#each payments as |payment|}}
                      <option value="{{payment.id}}">{{payment.name}}</option>
                    {{/each}}
                  </select>
                </div>
                <div class="mb-3">
                  <label for="comment" class="form-label">Комментарий</label>
                  <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
                </div>
                <button type="submit" id="createOrderButton" class="btn btn-primary">Заказ подтверждаю</button>
              </form>
            </div>
          </div>
      </div>
    </body>
  </html>
