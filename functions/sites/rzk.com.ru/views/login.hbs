{{#if envSite.user.auth}}
  <a href="/logout">{{envSite.i18n.aLogout}}</a>
  <h3>{{envSite.i18n.tLoginAuth0}}</h3>
  <h3>{{envSite.i18n.tLoginAuth1}} <a href="//t.me/{{envSite.botName}}?start=fromsite">@{{envSite.botName}}</a></h3>
{{else}}
  <h1>{{envSite.i18n.aLogin}}</h1>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    {{envSite.i18n.tLoginAuth2}}
    <a href="//t.me/{{envSite.botName}}?start=fromsite">@{{envSite.botName}}</a> {{envSite.i18n.tLoginAuth3}} {{envSite.domain}}
  </div>
{{/if}}

<script async src="https://telegram.org/js/telegram-widget.js?15" data-telegram-login="{{envSite.botName}}" data-size="large" data-auth-url="{{envSite.domain}}/login/{{redirectPage}}" data-request-access="write"></script>
