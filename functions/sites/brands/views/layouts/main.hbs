<!doctype html>
<html lang="{{site.lang}}" class="h-100">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <title>{{site.title}}</title>
    <link rel="icon" href="/favicon.ico">
    <meta name="description" content="{{site.description}}">
    <meta name="robots" content="index,follow">
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id={{site.gtag}}"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() {
            dataLayer.push(arguments);
        }
        gtag("js", new Date());
        gtag("config", "{{site.gtag}}");
    </script>
    <link rel="alternate" hreflang="ru-UA" href="{{site.urlRu}}">
    <link rel="alternate" hreflang="uk-UA" href="{{site.urlUk}}">
</head>
<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container">
                <a class="navbar-brand" href="/{{#if (equals site.lang "ru")}}ru{{/if}}">
                    <img src="https://rzk.com.ua/logo/logo-uk.svg" alt="{{site.name}}" height="40" width="40"> {{site.name}}
                </a>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    {{#if (equals site.lang "ru")}}
                    <a class="nav-link" aria-current="page" href="/">UA</a>
                    {{/if}}
                </li>
                </ul>
            </div>
        </nav>
    </header>
    <main>
        <div class="container mt-3 mb-5">
        {{{body}}}
        </div>
    </main>
    <footer class="mt-auto py-3">
      <div class="container">
        <h1>{{site.locale.contact}}</h1>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <a href="//rzk.com.ua/o/{{site.rzkId}}"><i class="bi bi-shop"></i> RZK Маркет {{site.name}}</a>
          </li>
          <li class="list-group-item">
            <a href="tel:+380 94 906-51-64"><i class="bi bi-telephone-fill"></i> +380 94 906-51-64</a>
          </li>
          <li class="list-group-item">
            <a href="//t.me/RzkMarketBot" target="_blank"><i class="bi bi-telegram"></i> Бот @RzkMarketBot</a>
          </li>
          <li class="list-group-item">
            <a href="//t.me/RzkMarketHelp" target="_blank"><i class="bi bi-telegram"></i> Чат @RzkMarketHelp</a>
          </li>
        </ul>
      </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>